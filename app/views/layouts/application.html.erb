<!DOCTYPE html>
<html>
<head>
  <title>Personalised Nutrition</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
<nav class="navbar navbar-expand-lg navbar-light bg-light">
  <a class="navbar-brand" href="#">Life Elixir Business</a>
  <button class="navbar-toggler" type="button" data-toggle="collapse">
    <span class="navbar-toggler-icon"></span>
  </button>
  <div class="collapse navbar-collapse">
    <ul class="navbar-nav">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-expanded="false">
          Spiders
        </a>
        <div class="dropdown-menu">
          <%= link_to t('engine'), admin_engine_dashboard_path, class: 'nav-link' %>
        </div>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-expanded="false">
          Elixir
        </a>
        <div class="dropdown-menu">
            <%= link_to t('units'), admin_units_path, class: 'nav-link' %>
            <%= link_to t('nutrition_facts'), admin_nutrition_facts_path, class: 'nav-link' %>
            <%= link_to t('ingredients'), admin_ingredients_path, class: 'nav-link' %>
            <%= link_to t('recipes'), admin_recipes_path, class: 'nav-link' %>
            <%= link_to t('recipe_category'), admin_recipe_categories_path, class: 'nav-link' %>
            <%= link_to t('ingredient_category'), admin_ingredient_categories_path, class: 'nav-link' %>
            <%= link_to t('cook'), admin_cooks_path, class: 'nav-link' %>
        </div>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-expanded="false">
          Market
        </a>
        <div class="dropdown-menu">
          <%= link_to 'Products', admin_products_path, class: 'nav-link' %>
          <%= link_to 'Product categories', admin_product_categories_path, class: 'nav-link' %>
          <%= link_to 'Cart', admin_carts_path, class: 'nav-link' %>
          <%= link_to 'Dropoff locations', admin_dropoff_locations_path, class: 'nav-link' %>
          <%= link_to 'Coupons', admin_coupons_path, class: 'nav-link' %>
          <%= link_to 'Postcodes', admin_postcodes_path, class: 'nav-link' %>
          <%= link_to 'Tags', admin_tags_path, class: 'nav-link' %>
        </div>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-expanded="false">
          Venues
        </a>
        <div class="dropdown-menu">
          <%= link_to 'Restaurants', admin_restaurants_path, class: 'nav-link' %>
          <%= link_to 'Meals', admin_meals_path, class: 'nav-link' %>
        </div>
      </li>
      <li class="nav-item">
        <%= link_to 'Campaigns', admin_campaigns_path, class: 'nav-link' %></li>
      </li>
      <li class="nav-item">
        <%= link_to 'Articles', admin_articles_path, class: 'nav-link' %></li>
      </li>
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-expanded="false">
          Users
        </a>
        <div class="dropdown-menu">
          <%= link_to 'Users', admin_users_path, class: 'nav-link' %>
          <%= link_to 'Tenants', admin_tenants_path, class: 'nav-link' %>
        </div>
      </li>
      <li class="nav-item dropdown">
      <a class="nav-link dropdown-toggle" href="#" data-toggle="dropdown" aria-expanded="false">
        Settings
      </a>
      <div class="dropdown-menu">
              <% if admin_signed_in? %>
                  <%= link_to('Logout as admin', destroy_admin_session_path, :method => :delete, class: 'nav-link') %>
              <% end %>
              <% if user_signed_in? %>
                  <%= link_to('Logout as user', destroy_user_session_path, :method => :delete, class: 'nav-link') %>
              <% end %>
      </div>
      </li>
    </ul>
  </div>
</nav>

<div class="container">
  <%= yield %>
</div>

</body>
</html>
