<!DOCTYPE html>
<html>
<head>
  <title>Elixr</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  <nav class="navbar navbar-inverse navbar-fixed-top" role="navigation">
    <div class="container">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <button type="button" class="navbar-toggle collapsed" aria-expanded="false" data-toggle="collapse" data-target="#mainmenu">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </button>
        <a class="navbar-brand" href="#">Logo</a>
      </div>
      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="mainmenu">
        <ul class="nav navbar-nav">
          <li>
            <%= link_to t('engine'), admin_engine_dashboard_path %>
          </li>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Elixirs<span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <li>
                <%= link_to t('units'), admin_units_path %>
              </li>
              <li>
                <%= link_to t('nutrition_facts'), admin_nutrition_facts_path %>
              </li>
              <li>
                <%= link_to t('ingredients'), admin_ingredients_path %>
              </li>
              <li>
                <%= link_to t('recipes'), admin_recipes_path %>
              </li>
              <li>
                <%= link_to t('recipe_category'), admin_recipe_categories_path %>
              </li>
              <li>
                <%= link_to t('ingredient_category'), admin_ingredient_categories_path %>
              </li>
              <li>
                <%= link_to t('cook'), admin_cooks_path %>
              </li>
            </ul>
          </li>
          <li>
            <%= link_to t('Subscribers'), admin_subscribers_path %>
          </li>
        </ul>

        <ul class="nav navbar-nav navbar-right">
          <li class='dropdown'>
            <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">Settings<span class="caret"></span>
            </a>
            <ul class="dropdown-menu">
              <% if admin_signed_in? %>
                <li>
                  <%= link_to('Logout as admin', destroy_admin_session_path, :method => :delete) %>
                </li>
              <% end %>
              <% if user_signed_in? %>
                <li>
                  <%= link_to('Logout as user', destroy_user_session_path, :method => :delete) %>
                </li>
              <% end %>
            </ul>
          </li>
        </ul>
      </div>
      <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
  </nav>

  <%= yield %>

</body>
</html>
