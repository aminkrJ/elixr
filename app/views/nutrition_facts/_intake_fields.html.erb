<div class="form-inline nested-fields">
  <div class="form-group">
    <%= f.text_field :age_from, class: 'form-control', placeholder: 'Age from' %>
  </div>
  <div class="form-group">
    <%= f.text_field :age_to, class: 'form-control', placeholder: 'Age to' %>
  </div>
  <div class="form-group">
    <%= f.text_field :period, class: 'form-control', placeholder: 'Period' %>
  </div>
  <div class="form-group">
    <%= f.text_field :amount, class: 'form-control', placeholder: 'Amount' %>
  </div>
  <div class="form-group">
    <%= f.select :unit_id, @units.collect{|u| [u.name, u.id]}, {prompt: 'Select unit'}, class: 'form-control' %>
  </div>
  <%= link_to_remove_association "remove intake", f %>
</div>
