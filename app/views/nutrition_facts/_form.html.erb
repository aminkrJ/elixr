<%= form_for(@nutrition_fact) do |f| %>
  <% if @nutrition_fact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@nutrition_fact.errors.count, "error") %> prohibited this nutrition_fact from being saved:</h2>

      <ul>
      <% @nutrition_fact.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <h3>Intake</h3>
  <%= f.fields_for :intakes do |i| %>
    <%= render 'intake_fields', f: i %>
  <% end %>
  <div class="links">
    <%= link_to_add_association 'add intake', f, :intakes %>
  </div>

  <div class="actions">
    <%= f.submit nil, class: 'btn btn-default' %>
  </div>
<% end %>
