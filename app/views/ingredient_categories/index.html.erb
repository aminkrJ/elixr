<p id="notice"><%= notice %></p>

<h1>Listing Ingredient Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredient_categories.each do |ingredient_category| %>
      <tr>
        <td><%= ingredient_category.name %></td>
        <td>
          <%= link_to 'Show', ingredient_category,  class: 'btn btn-link' %>
          <%= link_to 'Edit', edit_ingredient_category_path(ingredient_category), class: 'btn btn-default' %>
          <%= link_to 'Destroy', ingredient_category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ingredient category', new_ingredient_category_path, class: 'btn btn-primary' %>
