<p id="notice"><%= notice %></p>

<h1>Listing Units</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Symbol</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.name %></td>
        <td><%= unit.symbol %></td>
        <td>
          <%= link_to 'Show', unit, class: 'btn btn-link' %>
          <%= link_to 'Edit', edit_unit_path(unit), class: 'btn btn-default' %>
          <%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Unit', new_unit_path, class: 'btn btn-primary' %>
