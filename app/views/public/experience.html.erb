              <%= form_tag '/notify_me', method: :post do %>
  <% if @subscriber.errors.any? %>
    <div class='text-danger'>
      <ul class="unstyled">
      <% @subscriber.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


                <div class='form-group'>
                <%= text_field_tag 'full_name', nil, class: "form-control", placeholder: "Your name" %>
                </div>
                <div class='form-group'>
                <%= text_field_tag 'email', nil, class: "form-control", placeholder: "Your email" %>
                </div>
                <button class="btn btn-primary" type="submit"><i class="icon-mail"></i>&nbsp;Submit</button>
              <% end %>
            </div>
          </div>
        </div>
      </div>

