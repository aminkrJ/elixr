<%= form_for([:admin, @product], html: {multipart: true}) do |f| %>
  <% if @product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% @product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :name %><br>
    <%= f.text_field :name, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :short_description %><br>
    <%= f.text_area :short_description, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %><br>
    <%= f.text_area :description, class: 'wysihtml5 form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :serving_idea %><br>
    <%= f.text_area :serving_idea, class: 'wysihtml5 form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :nutrition_fact %><br>
    <%= f.text_area :nutrition_fact, class: 'wysihtml5 form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :price %><br>
    <%= f.text_field :price, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :weight %><br>
    <%= f.text_field :weight, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :category %><br>
    <%= f.text_field :category, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :category %><br>
    <%= f.select :product_category_id, ProductCategory.all.collect{|u| [u.name, u.id]}, { prompt: 'Select category', include_blank: true }, class: 'form-control' %>
  </div>
  <div>
    <h3>Tags</h3>
    <%= f.fields_for :product_tags do |pt| %>
      <%= render 'product_tag_fields', f: pt %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'Add tag', f, :product_tags %>
    </div>
  </div>
  <div>
    <h3>Ingredients</h3>
    <%= f.fields_for :product_ingredients do |pi| %>
      <%= render 'product_ingredient_fields', f: pi %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'Add ingredient', f, :product_ingredients %>
    </div>
  </div>
  <div>
    <h3>Recipes</h3>
    <%= f.fields_for :product_recipes do |pr| %>
      <%= render 'product_recipe_fields', f: pr %>
    <% end %>
    <div class="links">
      <%= link_to_add_association 'Add recipe', f, :product_recipes %>
    </div>
  </div>
  <div class="form-group">
    <%= f.check_box :primary, class: 'checkbox' %> <%= f.label :primary %><br>
  </div>
  <div class="form-group">
    <%= f.label :photo %><br>
    <%= f.file_field :photo %>
  </div>
  <div class="actions">
    <%= f.submit nil, class: 'btn btn-default' %>
  </div>
<% end %>
