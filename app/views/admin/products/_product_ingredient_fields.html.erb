<div class="nested-fields form-inline">
  <div class="form-group">
    <%= f.select :ingredient_id, @ingredients.collect{|u| [u.name, u.id]}, {prompt: 'Select ingredient'}, class: 'form-control' %>
    <%= f.number_field :weight, class: 'form-control', placeholder: 'weight' %>
    <%= f.number_field :percentage, class: 'form-control', placeholder: 'percentage', step: :any %>
    <%= f.check_box :extract, class: 'form-control', placeholder: 'extract' %>
    <%= f.text_field :info_link, class: 'form-control', placeholder: 'info_link' %>
  </div>

  <%= link_to_remove_association "remove ingredient", f %>
</div>
