<p id="notice"><%= notice %></p>

<h1>Listing Products</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th>Price</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td>
          <%= link_to 'Show', [:admin, product],  class: 'btn btn-link' %>
          <%= link_to 'Edit', edit_admin_product_path(product), class: 'btn btn-default' %>
          <%= link_to 'Destroy', [:admin, product], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_admin_product_path, class: 'btn btn-primary' %>
