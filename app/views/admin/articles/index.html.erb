<p id="notice"><%= notice %></p>

<h1>Listing Articles</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @articles.each do |article| %>
      <tr>
        <td><%= article.title %></td>
        <td>
          <%= link_to 'Show', [:admin, article],  class: 'btn btn-link' %>
          <%= link_to 'Edit', edit_admin_article_path(article), class: 'btn btn-default' %>
          <%= link_to 'Destroy', [:admin, article], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Article', new_admin_article_path, class: 'btn btn-primary' %>
