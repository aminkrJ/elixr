<h2>Order confirmation</h2>
<p>
  <b>Invoice ref.</b>
  <span><%= @cart.reference_number %></span> <br/>
  <span><b>Printed on </b><%= @cart.created_at.strftime("%m/%d/%Y") %></span>
</p>

<p>
  <b>Invoice/deliver to</b>
  <p>
    <%= @cart.customer.fullname %>
    <div>
      <%= @cart.customer.address %>
      <br />
      <%= @cart.customer.suburb %>, <%= @cart.customer.state.upcase %>, <%= @cart.customer.city %>, <%= @cart.customer.postcode %>, <%= @cart.customer.country %>
    </div>
  </p>
</p>

<div>
  <table style='width: 100%'>
    <tr style='border-bottom: 2px solid black'>
      <th style='text-align: left'>Item</th>
      <th style='text-align: left'>Qty</th>
      <th style='text-align: left'>Unit price</th>
      <th style='text-align: right'>Total</th>
    </tr>
    <tr>
      <td style='padding: 5px 0'>Vitality Pack</td>
      <td><%= @cart.quantity %></td>
      <td><%= @cart.price %>$</td>
      <td style='text-align: right'><%= @cart.quantity * @cart.price %>$</td>
    </tr>
    <tr>
      <td style='padding: 5px 0'></td>
      <td></td>
      <td>Shipping</td>
      <td style='text-align: right'><%= Cart::SHIPPING_FEE %>$</td>
    </tr>
    <tr>
      <td style='padding: 5px 0'></td>
      <td></td>
      <td><b>Order total</b></td>
      <td style='text-align: right'><b><%= @cart.total %>$</b></td>
    </tr>
  </table>
</div>
