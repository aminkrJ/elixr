<p id="notice"><%= notice %></p>

<h1>Listing Tag</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Short description</th>
    </tr>
  </thead>

  <tbody>
    <% @tags.each do |tag| %>
      <tr>
        <td><%= tag.name %></td>
        <td><%= tag.short_description %></td>
        <td>
          <%= link_to 'Show', [:admin, tag], class: 'btn btn-link' %>
          <%= link_to 'Edit', edit_admin_tag_path(tag), class: 'btn btn-default' %>
          <%= link_to 'Destroy', [:admin, tag], method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tag', new_admin_tag_path, class: 'btn btn-primary' %>
