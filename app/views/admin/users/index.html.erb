<p id="notice"><%= notice %></p>

<h1>Listing Users</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Email</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td>
          <%= user.email %>
        </td>
        <td>
          <%= link_to 'Show', [:admin, user], class: 'btn btn-link' %>
          <%= link_to 'Edit', edit_admin_recipe_path(user), class: 'btn btn-success' %>
          <%= link_to 'Destroy', [:admin, user], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

