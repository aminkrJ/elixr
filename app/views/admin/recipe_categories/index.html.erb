<p id="notice"><%= notice %></p>

<h1>Listing Recipe Categories</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @recipe_categories.each do |recipe_category| %>
      <tr>
        <td><%= recipe_category.name %></td>
        <td>
          <%= link_to 'Show', recipe_category,  class: 'btn btn-link' %>
          <%= link_to 'Edit', edit_recipe_category_path(recipe_category), class: 'btn btn-default' %>
          <%= link_to 'Destroy', recipe_category, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New recipe category', new_recipe_category_path, class: 'btn btn-primary' %>
