<p id="notice"><%= notice %></p>

<h1>Listing Cooks</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Name</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @cooks.each do |cook| %>
      <tr>
        <td><%= cook.name %></td>
        <td>
          <%= link_to 'Show', [:admin, cook],  class: 'btn btn-link' %>
          <%= link_to 'Edit', edit_admin_cook_path(cook), class: 'btn btn-default' %>
          <%= link_to 'Destroy', [:admin, cook], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cook', new_admin_cook_path, class: 'btn btn-primary' %>
