<p id="notice"><%= notice %></p>

<h1>Listing Recipes</h1>

<table class='table table-striped'>
  <thead>
    <tr>
      <th>Title</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @recipes.each do |recipe| %>
      <tr>
        <td>
          <%= recipe.title %>
        </td>
        <td>
          <%= link_to 'Show', [:admin, recipe], class: 'btn btn-link' %>
          <%= link_to 'Edit', edit_admin_recipe_path(recipe), class: 'btn btn-success' %>
          <%= link_to 'Destroy', [:admin, recipe], method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recipe', new_admin_recipe_path, class: 'btn btn-primary' %>
