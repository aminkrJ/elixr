<p id="notice"><%= notice %></p>

<h1>Listing Tenant</h1>

<table>
  <thead>
    <tr>
      <th>Domain</th>
      <th>App name</th>
    </tr>
  </thead>

  <tbody>
    <% @tenants.each do |tenant| %>
      <tr>
        <td><%= tenant.domain %></td>
        <td><%= tenant.app_name %></td>
        <td>
          <%= link_to 'Show', [:admin, tenant], class: 'btn btn-link' %>
          <%= link_to 'Edit', edit_admin_tenant_path(tenant), class: 'btn btn-default' %>
          <%= link_to 'Destroy', [:admin, tenant], method: :delete, data: { confirm: 'Are you sure?' } %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Tenant', new_admin_tenant_path, class: 'btn btn-primary' %>
