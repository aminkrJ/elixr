<div class="form-inline nested-fields">
  <div class="form-group">
    <%= f.select :nutrition_fact_id, @nutrition_facts.collect{|u| [u.name, u.id]}, {prompt: 'Select nutrition fact'}, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.text_field :amount, class: 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.select :unit_id, Unit.all.collect{|u| [u.name, u.id]}, {prompt: 'Select unit'}, class: 'form-control' %>
  </div>
  <%= link_to_remove_association "remove nutrition fact", f %>
</div>
