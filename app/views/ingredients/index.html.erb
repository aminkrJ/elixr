<p id="notice"><%= notice %></p>

<h1>Listing Ingredients</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @ingredients.each do |ingredient| %>
      <tr>
        <td><%= ingredient.name %></td>
        <td>
          <%= link_to 'Show', ingredient, class: 'btn btn-link' %>
          <%= link_to 'Nutrition facts', "#", class: 'btn btn-success' %>
          <%= link_to 'Edit', edit_ingredient_path(ingredient), class: 'btn btn-default' %>
          <%= link_to 'Destroy', ingredient, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Ingredient', new_ingredient_path, class: 'btn btn-primary' %>
